generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis, uuid_ossp(map: "uuid-ossp")]
}

model User {
  id        String   @id @default(cuid())
  matricula String   @unique
  name      String
  email     String   @unique
  birthDate DateTime
  cpf       String   @unique
  password  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  boletos Boleto[]
  notas   Nota[]
}

model Boleto {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  numero         String
  valor          Float
  vencimento     DateTime
  status         String
  linhaDigitavel String
  pdfUrl         String?

  createdAt DateTime @default(now())
}

model Disciplina {
  id        String   @id @default(uuid())
  nome      String
  codigo    String
  creditos  Int
  createdAt DateTime @default(now())

  notas Nota[]
}

model Nota {
  id           String @id @default(uuid())
  userId       String
  disciplinaId String

  user       User       @relation(fields: [userId], references: [id])
  disciplina Disciplina @relation(fields: [disciplinaId], references: [id])

  nota1     Float?
  nota2     Float?
  notaFinal Float?
  faltas    Int?
  situacao  String

  createdAt DateTime @default(now())
}
